{
  "name": "XFCE Desktop Codespace",
  "image": "mcr.microsoft.com/vscode/devcontainers/universal:2",
  "features": {
    "ghcr.io/devcontainers/features/desktop-lite:1": {
      "password": "123456",          // VNC 密码，随便改成你喜欢的
      "webPort": 6080,
      "vncPort": 5901
    }
  },
  "forwardPorts": [6080],
  "portsAttributes": {
    "6080": {
      "label": "Desktop (noVNC)",
      "onAutoForward": "openBrowser"
    }
  },
  "postCreateCommand": "sudo apt update && sudo apt install -y xfce4 xfce4-goodies firefox mousepad",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ]
    }
  },
  "remoteUser": "codespace"
}
